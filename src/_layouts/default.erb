    <%= render "head", metadata: site.metadata %>
  </head>
  <body class="font-sans text-skin-base <%= resource.data.layout %> <%= resource.data.page_class %>" data-controller="modal">
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <div class="relative bg-white overflow-hidden">

      <%= yield %>

