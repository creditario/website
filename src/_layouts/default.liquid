<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="font-sans text-skin-base {{ resource.data.layout }} {{ resource.data.page_class }}" data-controller="modal">

    {% render "navbar", metadata: site.metadata, resource: resource %}

    <div class="relative bg-white overflow-hidden">

      {{ content }}

      {% render "footer", metadata: site.metadata %}

      {% render "modal", metadata: site.metadata %}
    </div>
  </body>
</html>
